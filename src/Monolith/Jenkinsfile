pipeline {
  agent any
  stages {
    stage('Git Checkout') {
      steps {
        git branch: 'master', url: 'https://github.com/phongnguyend/Practical.CleanArchitecture'
      }
    }
    stage('Build') {
      steps {
        sh 'dotnet --info'
        dir('src/Monolith') {
          sh 'dotnet clean'
          sh 'dotnet build --configuration Release'
        }
      }
    }
    stage('Publish') {
      steps {
        dir('src/Monolith') {
          sh 'dotnet publish ClassifiedAds.BackgroundServer/*.csproj --configuration Release'
          sh 'dotnet publish ClassifiedAds.GraphQL/*.csproj --configuration Release'
          sh 'dotnet publish ClassifiedAds.Migrator/*.csproj --configuration Release'
          sh 'dotnet publish ClassifiedAds.WebAPI/*.csproj --configuration Release'
          sh 'dotnet publish ClassifiedAds.IdentityServer/*.csproj --configuration Release'
          sh 'dotnet publish ClassifiedAds.WebMVC/*.csproj --configuration Release'
          sh 'dotnet publish ClassifiedAds.BlazorServerSide/*.csproj --configuration Release'
          sh 'dotnet publish ClassifiedAds.BlazorWebAssembly/*.csproj --configuration Release'
        }
      }
    }
  }
}